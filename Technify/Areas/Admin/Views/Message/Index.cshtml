@using Technify.Areas.Admin.Models.Contact
@model MessageIndexVM




<h1 class="page-title">Messages</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover shadow-lg rounded">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Received At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model.Messages)
            {
                <tr>
                    <td>@message.Name</td>
                    <td>@message.Email</td>
                    <td>@message.Subject</td>
                    <td>
                        @if (message.Message.Length > 8)
                        {
                            @message.Message.Substring(0, 8)
                          
                            }
                        else
                        {
                            @message.Message 
                        }
                        
                    </td>
                    <td>@message.CreatedAt.ToString("g")</td>
                    <td>
                        <a href="@Url.Action("Details", new { id = message.Id })" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> View
                        </a>
                        <form method="post" action="@Url.Action("Delete", new { id = message.Id })" onsubmit="return confirm('Are you sure you want to delete this message?');">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Custom styles for the page */
    .page-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table th {
        background-color: #343a40;
        color: #fff;
        font-weight: bold;
    }

    .table td {
        color: #495057;
    }

    .table-responsive {
        margin-top: 20px;
    }

    .table .btn {
        margin: 0 5px;
    }

    .table .btn i {
        margin-right: 5px;
    }

    /* Hover effects for the table rows */
    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>
