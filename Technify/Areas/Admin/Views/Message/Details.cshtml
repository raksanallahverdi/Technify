@using Technify.Areas.Admin.Models.Contact
@model MessageVM

<h1 class="page-title text-center text-primary mb-4">Message Details</h1>

<div class="card shadow-lg border-0 rounded-3 overflow-hidden mx-auto" style="max-width: 800px; background: linear-gradient(45deg, #007BFF, #00A1E4);">
    <div class="card-header bg-transparent border-0 text-center text-white">
        <h3 class="card-title display-4">@Model.Subject</h3>
    </div>
    <div class="card-body text-white">
        <div class="row mb-3">
            <div class="col-12">
                <p class="lead"><strong>Name:</strong> <span class="text-light">@Model.Name</span></p>
            </div>
            <div class="col-12">
                <p class="lead"><strong>Email:</strong> <span class="text-light">@Model.Email</span></p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <p class="lead"><strong>Message:</strong></p>
                <div class="message-box p-3 bg-dark rounded-lg text-light">
                    <p class="mb-0">@Model.Message</p>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <p class="lead"><strong>Received At:</strong> <span class="text-light">@Model.CreatedAt.ToString("f")</span></p>
            </div>
        </div>
    </div>
    <div class="card-footer text-center border-0">
        <a href="@Url.Action("Index")" class="btn btn-lg btn-outline-light border-2 px-5 py-3 rounded-pill">
            <i class="fas fa-arrow-left"></i> Back to Messages
        </a>
    </div>
</div>

<style>
    .page-title {
        font-size: 1.5rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .card {
        border-radius: 25px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 15px 25px rgba(0, 0, 0, 0.2);
        }

    .card-header {
        background: rgba(0, 0, 0, 0.4);
        border-bottom: 0;
    }

    .card-body {
        background-color: rgba(0, 0, 0, 0.6);
    }

    .message-box {
        background-color: #222;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-outline-light {
        background-color: rgba(255, 255, 255, 0.1);
        border: 2px solid #fff;
        font-size: 1.2rem;
        letter-spacing: 1px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #333;
        }

    .text-light {
        color: #f8f9fa !important;
    }

    /* Additional customizations */
    .card-footer {
        background-color: rgba(0, 0, 0, 0.8);
    }

    .row .col-12 {
        margin-bottom: 10px;
    }

    .lead {
        font-size: 1.2rem;
    }

    .btn i {
        margin-right: 10px;
    }
</style>
