@using Technify.Models.Account;
@model AccountForgetPasswordVM;

@{

    Layout = "_Layout";
}


<div class="row justify-content-center">
    <div class="col-md-6 text-center mb-5">
        <h2 class="heading-section">Forget Password?</h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">


            <form method="post" asp-action="forgetpassword" asp-controller="account" class="signin-form">
                <p class="w-100 text-center">&mdash; Enter Your Email &mdash;</p>
                <div class="text-danger" asp-validation-summary="All">
                </div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="social d-flex text-center">
                    <button type="submit" class="px-1 py-1 rounded">Send</button>
                </div>


            </form>

        
        </div>
    </div>
</div>




