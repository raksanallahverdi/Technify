@using Technify.Models.Work
@model WorkUpdateVM

<section style="margin-top:70px;" class="ftco-section services-section">
    <div class="container">
        <form enctype="multipart/form-data" asp-route-id="@Model.Id" method="post" asp-action="Update" asp-controller="Work">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" placeholder="Enter surname" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GitHubLink"></label>
                <input asp-for="GitHubLink" class="form-control" placeholder="Enter GitHub link" />
                <span asp-validation-for="GitHubLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CvLink"></label>
                <input asp-for="CvLink" class="form-control" placeholder="Enter CV link" />
                <span asp-validation-for="CvLink" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreatedAt"></label>
                <input asp-for="CreatedAt" class="form-control" placeholder="Created At" disabled />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkTypeId"></label>
                <select class="form-select" asp-for="WorkTypeId" asp-items="Model.WorkTypes"></select>
                <span asp-validation-for="WorkTypeId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</section>
