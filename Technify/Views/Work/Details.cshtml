@using Technify.Models.Work
@model WorkDetailsVM

<section class="ftco-section services-section" style="padding: 50px 0; background: #f9f9f9; margin-top: 120px;">
    <!-- Image styling -->
    <div style="text-align: center; margin-bottom: 30px;">
        <img src="~/assets_main/images/depositphotos_145085237-stock-illustration-user-profile-group.jpg"
             alt="User Headshot"
             style="width: 250px; height: 250px; object-fit: cover; border-radius: 50%; border: 5px solid #007bff; box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);">
    </div>

    <div class="container" style="max-width: 800px; background: #ffffff; border-radius: 10px; box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1); padding: 30px; overflow: hidden;">
        <h2 style="text-align: center; font-size: 2rem; color: #333; margin-bottom: 30px; border-bottom: 2px solid #dee2e6; padding-bottom: 10px;">Work Details</h2>
        <div>
            <dl class="row" style="margin: 0;">
                <dt class="col-sm-3" style="font-weight: bold; color: #555;">Title</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">@Model.Title</dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">Work Type</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">@Model.WorkTypeName</dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">Name</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">@Model.Name</dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">Surname</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">@Model.Surname</dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">Phone Number</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">@Model.PhoneNumber</dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">GitHub Link</dt>
                <dd class="col-sm-9" style="margin-bottom: 15px; word-wrap: break-word; overflow-wrap: break-word;">
                    <a href="@Model.GitHubLink" target="_blank" style="color: #007bff; text-decoration: none;">@Model.GitHubLink</a>
                </dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">CV Link</dt>
                <dd class="col-sm-9" style="margin-bottom: 15px; word-wrap: break-word; overflow-wrap: break-word;">
                    <a href="@Model.CvLink" target="_blank" style="color: #007bff; text-decoration: none;">@Model.CvLink</a>
                </dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">Created At</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">@Model.CreatedAt.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">Updated At</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">
                    @if (Model.UpdatedAt.HasValue)
                    {
                        @Model.UpdatedAt.Value.ToString("dd MMM yyyy")
                    }
                    else
                    {
                        <em style="color: #888;">Not updated yet</em>
                    }
                </dd>

                <dt class="col-sm-3" style="font-weight: bold; color: #555;">User Name</dt>
                <dd class="col-sm-9" style="color: #333; margin-bottom: 15px;">@Model.UserName</dd>
            </dl>
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a asp-controller="Services" asp-action="Index" class="btn btn-secondary" style="background: #6c757d; border: none; padding: 10px 20px; font-size: 1rem; color: #fff; border-radius: 5px; text-decoration: none;">Back to List</a>
        </div>
    </div>
</section>

