@using Technify.Models.Work
@model WorkCreateVM
<section class="ftco-section services-section">
    <div class="container">
        <form style="margin:100px" enctype="multipart/form-data" method="post" asp-action="create" asp-controller="Work">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Enter Work Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" placeholder="Enter Surname" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GitHubLink"></label>
                <input asp-for="GitHubLink" class="form-control" placeholder="Enter Your GitHub Link" />
                <span asp-validation-for="GitHubLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CvLink"></label>
                <input asp-for="CvLink" class="form-control" placeholder="Enter Your Cv Link" />
                <span asp-validation-for="CvLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkTypeId"></label>
                <select class="form-select" asp-for="WorkTypeId" asp-items="Model.WorkTypes"></select>
                <span asp-validation-for="WorkTypeId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>

    </div>
</section>
